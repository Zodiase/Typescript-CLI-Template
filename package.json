{
    "name": "tscli-template-generator",
    "version": "1.0.0",
    "description": "Tool for generating templates for CLI tools written in TypeScript.",
    "engines": {
        "node": ">=16"
    },
    "bin": {
        "tscli-create": "bin.cjs"
    },
    "main": "dist/main.js",
    "scripts": {
        "check:style": "npx eslint .",
        "format": "npx prettier --ignore-path .gitignore --write .",
        "dev:run": "node bin.cjs",
        "dist:run": "node bin.cjs",
        "dist:build": "npx tsc --build src",
        "dist:clean": "rm -rf dist",
        "test": "jest"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Zodiase/Typescript-CLI-Template.git"
    },
    "author": "Xingchen Hong",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/Zodiase/Typescript-CLI-Template/issues"
    },
    "homepage": "https://github.com/Zodiase/Typescript-CLI-Template#readme",
    "prettier": "@xch/prettier-config",
    "devDependencies": {
        "@types/fs-extra": "^11.0.1",
        "@types/jest": "^29.5.2",
        "@types/node": "^20.3.1",
        "@types/object-path": "^0.11.1",
        "@types/semver": "^7.5.0",
        "@typescript-eslint/eslint-plugin": "^5.59.11",
        "@typescript-eslint/parser": "^5.59.11",
        "@xch/prettier-config": "^0.1.1",
        "eslint": "^8.43.0",
        "eslint-config-prettier": "^8.8.0",
        "jest": "^29.5.0",
        "prettier": "2.8.8",
        "ts-jest": "^29.1.0",
        "ts-node": "^10.9.1",
        "type-fest": "^3.12.0",
        "typescript": "^5.1.3"
    },
    "dependencies": {
        "commander": "^11.0.0",
        "fs-extra": "^11.1.1",
        "object-path": "^0.11.8",
        "sanitize-filename": "^1.6.3",
        "semver": "^7.5.2"
    }
}
